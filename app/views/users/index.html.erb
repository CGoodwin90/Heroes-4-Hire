<div class="homepage-user">
  <div class="homepage-banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://res.cloudinary.com/dthdgcolp/image/upload/v1634969281/BG_Images/004tho_ons_quo_dsk_01_1_e6jwfj.jpg);">
    <div class="banner-text-box">
      <h1 class="mb-5">Host a Superhero, <br>be a hero</h1>
      <%= link_to "Hire our your hero", new_superhero_path, class: "btn-solid" %>
    </div>
  </div>

  <div class="homepage-howitworks">
    <h3 class="pt-5">Hiring out in 3 steps</h3>

    <div class="container container-howitworks">
      <div class="card-howitworks">
        <div class="number">1</div>
        <h5>List your hero for free</h5>
      </div>

      <div class="card-howitworks">
        <div class="number">2</div>
        <h5>Decide how you want to host</h5>
      </div>

      <div class="card-howitworks">
        <div class="number">3</div>
        <h5>Welcome your first savior</h5>
      </div>
    </div>
  </div>


  <div class="homepage-banner" style="height: 65vh; background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://res.cloudinary.com/dthdgcolp/image/upload/v1567145683/dvbdxz02yrtgh8wsuhdb.jpg);">
    <h3 class="container">"A hero can be anyone"</h3>
  </div>

  <%= render 'shared/footer' %>
  </div>

</div>


